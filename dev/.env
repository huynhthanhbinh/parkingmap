# Global environment
TIMEZONE=Asia/Bangkok
DOCKER_HUB_ID=saigonparkingmap

# Version control
PROXY_VERSION=v2.0
GATEWAY_VERSION=v2.0
MESSAGE_QUEUE_VERSION=v2.0
SERVICE_DISCOVERY_VERSION=v2.0
MAIL_SERVICE_VERSION=v2.0
AUTH_SERVICE_VERSION=v2.0
USER_SERVICE_VERSION=v2.0
PARKING_LOT_SERVICE_VERSION=v2.0

# port config
PROXY_ADMIN_PORT=9901
PROXY_HTTP_PORT=8338
PROXY_HTTP_SSL_PORT=8448
MESSAGE_QUEUE_PORT=5672
MESSAGE_QUEUE_MANAGEMENT_PORT=15672
SERVICE_DISCOVERY_DNS_PORT=8600
SERVICE_DISCOVERY_HTTP_PORT=8500
SERVICE_DISCOVERY_GRPC_PORT=8502

#microservices config
MAIL_SERVICE_ID=mail-1
MAIL_SERVICE_HOST=172.28.1.7
MAIL_SERVICE_PORT=6666

AUTH_SERVICE_ID=auth-1
AUTH_SERVICE_HOST=172.28.1.8
AUTH_SERVICE_PORT=7777

USER_SERVICE_ID=user-1
USER_SERVICE_HOST=172.28.1.9
USER_SERVICE_PORT=8888

PARKING_LOT_SERVICE_1_ID=parkinglot-1
PARKING_LOT_SERVICE_1_HOST=172.28.1.10
PARKING_LOT_SERVICE_1_PORT=9999

PARKING_LOT_SERVICE_2_ID=parkinglot-2
PARKING_LOT_SERVICE_2_HOST=172.28.1.11
PARKING_LOT_SERVICE_2_PORT=9099

PARKING_LOT_SERVICE_3_ID=parkinglot-3
PARKING_LOT_SERVICE_3_HOST=172.28.1.12
PARKING_LOT_SERVICE_3_PORT=9909

# Kong mutual gateway config
KONG_DATABASE=off
KONG_LOG_LEVEL=info
KONG_MEM_CACHE_SIZE=256m
KONG_DNS_RESOLVER=172.28.1.5:8600
KONG_SSL_CERT_PATH=/usr/local/kong/certificate/saigonparking_server.crt
KONG_SSL_CERT_KEY_PATH=/usr/local/kong/certificate/saigonparking_key.pem
KONG_PLUGINS=
KONG_ADMIN_PORT=8001
KONG_ADMIN_SSL_PORT=8444
KONG_ADMIN_LISTEN=0.0.0.0:8001, 0.0.0.0:8444 ssl
KONG_PROXY_LISTEN=0.0.0.0:8000, 0.0.0.0:8443 ssl, 0.0.0.0:9080 http2, 0.0.0.0:9081 http2 ssl
KONG_DECLARATIVE_CONFIG=/etc/kong/config/kong.yml

# Kong grpc gateway config
KONG_GRPC_PORT=9080
KONG_GRPC_SSL_PORT=9081
KONG_GRPC_ADMIN_PORT=8001
KONG_GRPC_ADMIN_SSL_PORT=8444
KONG_GRPC_PLUGINS=rate-limiting
KONG_GRPC_ADMIN_LISTEN=0.0.0.0:8001, 0.0.0.0:8444 ssl
KONG_GRPC_PROXY_LISTEN=0.0.0.0:9080 http2, 0.0.0.0:9081 http2 ssl
KONG_GRPC_DECLARATIVE_CONFIG=/etc/kong/config/kong_grpc.yml

# Kong http gateway config
KONG_HTTP_PORT=8000
KONG_HTTP_SSL_PORT=8443
KONG_HTTP_ADMIN_PORT=8002
KONG_HTTP_ADMIN_SSL_PORT=8445
KONG_HTTP_PLUGINS=rate-limiting, cors, grpc-web
KONG_HTTP_ADMIN_LISTEN=0.0.0.0:8002, 0.0.0.0:8445 ssl
KONG_HTTP_PROXY_LISTEN=0.0.0.0:8000, 0.0.0.0:8443 ssl
KONG_HTTP_DECLARATIVE_CONFIG=/etc/kong/config/kong_http.yml

# Rabbit MQ config
RABBITMQ_CONFIG_FILE=/etc/rabbitmq/rabbitmq.conf
RABBITMQ_SERVER_ADDITIONAL_ERL_ARGS=-rabbit log[{console,[{level,error}]}]